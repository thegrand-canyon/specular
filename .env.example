# ===========================================
# Private Key (NEVER commit the real .env file!)
# ===========================================
PRIVATE_KEY=your_private_key_here

# ===========================================
# Ethereum RPC URLs
# ===========================================
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# ===========================================
# Base RPC URLs
# ===========================================
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# ===========================================
# Arbitrum RPC URLs
# ===========================================
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
ARBITRUM_SEPOLIA_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc

# ===========================================
# Optimism RPC URLs
# ===========================================
OPTIMISM_RPC_URL=https://mainnet.optimism.io
OPTIMISM_SEPOLIA_RPC_URL=https://sepolia.optimism.io

# ===========================================
# Polygon RPC URLs
# ===========================================
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_AMOY_RPC_URL=https://rpc-amoy.polygon.technology

# ===========================================
# Block Explorer API Keys (for contract verification)
# ===========================================
ETHERSCAN_API_KEY=your_etherscan_api_key
BASESCAN_API_KEY=your_basescan_api_key
ARBISCAN_API_KEY=your_arbiscan_api_key
OPTIMISM_ETHERSCAN_API_KEY=your_optimism_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# ===========================================
# SDK Configuration
# ===========================================
DEFAULT_NETWORK=sepolia
LOG_LEVEL=info

# ===========================================
# Optional: Gas Reporting
# ===========================================
REPORT_GAS=false
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# ===========================================
# NOTES:
# ===========================================
# 1. Get free RPC URLs from:
#    - Alchemy: https://www.alchemy.com/
#    - Infura: https://www.infura.io/
#    - QuickNode: https://www.quicknode.com/
#
# 2. Get block explorer API keys from:
#    - Etherscan: https://etherscan.io/apis
#    - Basescan: https://basescan.org/apis
#    - Arbiscan: https://arbiscan.io/apis
#    - Optimism Etherscan: https://optimistic.etherscan.io/apis
#    - Polygonscan: https://polygonscan.com/apis
#
# 3. SECURITY WARNING:
#    - Never commit your .env file to git
#    - Use a dedicated deployment wallet
#    - Keep private keys secure
